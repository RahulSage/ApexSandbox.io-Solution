public void createCourseAndClass(String name, String description) {
    // code here
    apxio__Course__c course = new apxio__Course__c();
    course.Name = name;
    if(description != null){course.apxio__Course_Details__c = description;}

    insert course;

    apxio__Class__c newClass = new apxio__Class__c();
    newClass.Name = name;
    newClass.apxio__Course__c = course.Id;
    if(description != null){newClass.apxio__Description__c = description.abbreviate(255);}

    insert newClass;
}